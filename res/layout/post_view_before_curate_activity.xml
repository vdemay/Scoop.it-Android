<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <Button
                android:id="@+id/post_list_original"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/post_list_activity_view_original" >
            </Button>

            <TextView
                android:id="@+id/post_list_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loading..." />

            <ImageView
                android:id="@+id/post_list_image"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/default_icon" >
            </ImageView>

            <TextView
                android:id="@+id/post_list_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loading..." />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/post_view_before_curate_scoopit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Scoop.it!" >
        </Button>

        <Button
            android:id="@+id/post_view_before_curate_discard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Discard" >
        </Button>
    </LinearLayout>

</RelativeLayout>